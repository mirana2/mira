<p id="notice"><%= notice %></p>

<h1>Pending Articles</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pending_articles.each do |pending_article| %>
      <tr>
        <td><%= link_to 'Show', pending_article %></td>
        <td><%= link_to 'Edit', edit_pending_article_path(pending_article) %></td>
        <td><%= link_to 'Destroy', pending_article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pending Article', new_pending_article_path %>
